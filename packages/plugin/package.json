{
    "name": "@evoke-platform/plugin",
    "version": "1.0.0-dev.1",
    "description": "Scaffold a new Evoke platform plugin project",
    "files": [
        "README.md",
        "bin",
        "dist",
        "src",
        "!*/__tests__"
    ],
    "bin": {
        "create-plugin": "./bin/create-plugin.js"
    },
    "keywords": [
        "evoke"
    ],
    "devDependencies": {
        "@types/mocha": "^10.0.1",
        "@types/validate-npm-package-name": "^4.0.0",
        "@types/yeoman-assert": "^3.1.1",
        "@types/yeoman-generator": "^5.0.0",
        "@types/yeoman-test": "^4.0.3",
        "commit-and-tag-version": "^10.0.1",
        "copyfiles": "^2.4.1",
        "mocha": "^10.2.0",
        "typescript": "^4.9.5",
        "yeoman-assert": "^3.1.1",
        "yeoman-test": "^6.3.0"
    },
    "engines": {
        "npm": ">= 4.0.0"
    },
    "dependencies": {
        "mem-fs": "^2.0.0",
        "mem-fs-editor": "^9.0.0",
        "validate-npm-package-name": "^5.0.0",
        "yeoman-environment": "^3.9.1",
        "yeoman-generator": "^5.6.1"
    },
    "jest": {
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            ".eslintrc.js"
        ]
    },
    "scripts": {
        "build": "tsc",
        "postbuild": "copyfiles -a -u 1 src/**/templates/** dist",
        "pretest": "npm run build",
        "test": "mocha dist/__tests__",
        "release": "commit-and-tag-version -t plugin@ --releaseCommitMessageFormat \"chore(release): plugin@{{currentTag}} [skip ci]\"",
        "deploy": "npm publish"
    }
}
